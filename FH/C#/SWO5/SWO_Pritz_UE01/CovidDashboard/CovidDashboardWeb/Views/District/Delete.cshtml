@model SWO5.Dashboard.Domain.District
@{
    ViewData["Title"] = "Covid Dashboard Web - Delete District";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            Delete District
        </div>

        <div class="card-body">
            <div class="form-horizontal">
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.Name)
                <div class="form-group">
                    <h1>Are you sure you want to delete the district '@Model.Name'?</h1>
                    @Html.ValidationMessage("error", "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <!-- Submit -->
                    <div class="col-md-10 col-md-offset-2">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                        <button class="btn btn-primary">
                            @Html.ActionLink("Cancel", "Index", "District", htmlAttributes: new { style = "color: white;" })
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "District")
</div>