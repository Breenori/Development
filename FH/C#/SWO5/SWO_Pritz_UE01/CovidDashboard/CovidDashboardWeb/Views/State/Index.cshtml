@model List<SWO5.Dashboard.Domain.State>
@{
    ViewData["Title"] = "Covid Dashboard Web - States";
}

<div class="text-center">
    <h1 class="display-4">Covid Dashboard Web - States</h1>
    <p>Manage available States here.</p>
</div>

<div class="card">
    <div class="card-header">
        Available States
    </div>

    <div class="card-body">
        <p class="card-text"> Select a State below to modify and delete it.</p>
    </div>

    <div style="height:400px;overflow-y: auto;">
        @if (Model.Count > 0)
        {
            <table class="table table-striped">
                <thead class="thead-light">
                    <tr>
                        <th scope="col" style="position:sticky; top:0;"></th>
                        <th scope="col" style="position:sticky; top:0;">State name</th>
                        <th scope="col" style="position:sticky; top:0;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td></td>
                            <td>@Html.DisplayFor(m => m[i].Name)</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = Model[i].Id }, null)
                                @Html.ActionLink("Delete", "Delete", new { id = Model[i].Id }, null)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                No States could be found in database!
            </div>
        }
    </div>
    @Html.ActionLink("Create", "Create", "State", htmlAttributes: new { @class ="btn btn-primary" })
</div>

