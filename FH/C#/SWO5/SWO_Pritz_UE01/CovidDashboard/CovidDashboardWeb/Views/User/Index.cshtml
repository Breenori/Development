@model List<SWO5.Dashboard.Domain.User>
@{
    ViewData["Title"] = "Covid Dashboard Web - Users";
}

<div class="text-center">
    <h1 class="display-4">Covid Dashboard Web - Users</h1>
    <p>Manage available Users here.</p>
</div>

<div class="card">
    <div class="card-header">
        Available Users
    </div>

    <div class="card-body">
        <p class="card-text"> Select a User below to modify and delete it.</p>
    </div>

    <div style="height:400px;overflow-y: auto;">
        @if (Model.Count > 0)
        {
            <table class="table table-striped">
                <thead class="thead-light">
                    <tr>
                        <th scope="col" style="position:sticky; top:0;"></th>
                        <th scope="col" style="position:sticky; top:0;">Username</th>
                        <th scope="col" style="position:sticky; top:0;">Password</th>
                        <th scope="col" style="position:sticky; top:0;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                    <tr>
                        <td></td>
                        <td>@Html.DisplayFor(m => m[i].Name)</td>
                        <td>@Html.DisplayFor(m => m[i].Password)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = Model[i].Id }, null)
                            @Html.ActionLink("Delete", "Delete", new { id = Model[i].Id }, null)
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                No Users could be found in database!
            </div>
        }
    </div>
    @Html.ActionLink("Create", "Create", "User", htmlAttributes: new { @class="btn btn-primary" })
</div>

