@model SWO5.Dashboard.Domain.User
@{
    ViewData["Title"] = "Covid Dashboard Web - Delete User";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            Delete User
        </div>

        <div class="card-body">
            <div class="form-horizontal">
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.Name)
                @Html.HiddenFor(model => model.Password)
                <div class="form-group">
                    <h1>Are you sure you want to delete the user '@Model.Name'?</h1>
                    @Html.ValidationMessage("error", "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <!-- Submit -->
                    <div class="col-md-10 col-md-offset-2">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                        @Html.ActionLink("Cancel", "Index", "User", htmlAttributes: new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "User")
</div>