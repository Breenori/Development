@model SWO5.Currency.Web.Models.ExchangeRateViewModel
@{
	ViewData["Title"] = "Currency Converter Web - ExchangeRate";
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<div class="card">
		<div class="card-header">
			Edit Exchange Rate
		</div>

		<div class="card-body">
			<div class="form-horizontal"> 
				
				<div class="form-group"><!-- Code -->
					@Html.LabelFor(model => model.ExchangeRate.Rate, htmlAttributes:new {@class="control-label col-md-2"})
					<div class="col-md-10">
						@Html.EditorFor(model => model.ExchangeRate.Rate, "", new {@class="form-control"})
						@Html.ValidationMessageFor(model => model.ExchangeRate.Rate, "", new {@class="text-danger"})
					</div>
				</div>
				<div class="form-group"><!-- Name -->
					@Html.LabelFor(model => model.AvailableCurrencyTypes, htmlAttributes:new {@class="control-label col-md-2"})
					<div class="col-md-10">
						@Html.DropDownListFor(model => model.SelectedCurrencyTypeId, Model.AvailableCurrencyTypes, htmlAttributes: new {@class="form-control"})
						@Html.ValidationMessageFor(model => model.SelectedCurrencyTypeId, "", new {@class="text-danger"})
					</div>
				</div>
				<div class="form-group"><!-- Submit -->
					<div class="col-md-10 col-md-offset-2">
						<input type="submit" value="Create" class="btn btn-primary"/>
					</div>
				</div>
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Back to List", "Index", "Currency")
</div>