@model List<SWO5.Currency.Domain.CurrencyType>
@{
	ViewData["Title"] = "Currency Converter Web";
}

<div class="text-center">
	<h1 class="display-4">Currency Converter Web</h1>
	<p>Managing Application for Currency Converter.</p>
</div>

<div class="card">
	<div class="card-header">
		Available Currency Types
	</div>

	<div class="card-body">
		<p class="card-text"> Select a CurrencyType below to alter its attribute values.</p>
	</div>

	<div style="height:400px;overflow-y: auto;">
		@if (Model.Count > 0) {
			<table class="table table-striped">
				<thead class="thead-light">
					<tr>
						<th scope="col" style="position:sticky; top:0;"></th>
						<th scope="col" style="position:sticky; top:0;">Currency COde</th>
						<th scope="col" style="position:sticky; top:0;">Currency Name</th>
						<th scope="col" style="position:sticky; top:0;">Action</th>
					</tr>
				</thead>
				<tbody>
					@for(int i=0; i < Model.Count; i++)
					{
						<tr>
							<td></td>
							<td>@Html.DisplayFor(m => m[i].Code)</td>
							<td>@Html.DisplayFor(m => m[i].Name)</td>
							<td>
								<!-- Command Name, Display Name, Object that we want to edit, HTML parameters-->
								@Html.ActionLink("Edit","Edit", new { id=Model[i].Id }, null)
							</td>
						</tr>
					}
				</tbody>
			</table>
		} else
		{
			<div class="alert alert-warning" role="alert">
				No Currencies could be found in database!
			</div>
		}
	</div>
	<button>@Html.ActionLink("Create", "Create")</button>
</div>

